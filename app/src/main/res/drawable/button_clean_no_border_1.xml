<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#AAA" />

            <padding
                android:left="7dp"
                android:top="3dp"
                android:right="7dp"
                android:bottom="3dp" />

            <stroke android:color="#eeeeee" android:width="1dp" android:dashWidth="1dp"></stroke>

            <corners android:radius="7dp" />

        </shape>


    </item>

    <item>
        <shape>
            <solid
                android:color="#777" />

            <padding
                android:left="7dp"
                android:top="3dp"
                android:right="7dp"
                android:bottom="3dp" />

            <stroke android:color="#eeeeee" android:width="1dp" android:dashWidth="1dp"></stroke>

            <corners android:radius="7dp" />

        </shape>

    </item>
</selector>