<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidadvance.springtwofactorauth.activities.SettingsActivity"
    >

  <Button
      android:text="RESET APPLICATION"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/button_reset"
      />
  <LinearLayout
      android:orientation="vertical"
      android:id="@+id/linlayout_settings"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentStart="true"
      >
    <TextView
        android:text="Enter the code from the web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_margin="8dp"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText_auth_code"
        android:hint="authXXXXXXX"
        android:layout_margin="8dp"
        />
    <Button
        android:text="SAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:layout_margin="8dp"
        />
  </LinearLayout>
</RelativeLayout>
